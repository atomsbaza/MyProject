@model MemberTypeLists
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Add Member Types</h2>
<hr />

<form asp-action="Create">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="MemberTypeName" class="custom-label"></label>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <input asp-for="MemberTypeName" class="form-control">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Description" class="custom-label"></label>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <input asp-for="Description" class="form-control">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label asp-for="MemberTypeCosts" class="custom-label"></label>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <input asp-for="MemberTypeCosts" class="form-control">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Active" class="custom-label"></label>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <input asp-for="Active" type="checkbox">
                    </div>
                </div>
            </div>

            <span asp-validation-for="MemberTypeName"></span>
            <span asp-validation-for="MemberTypeCosts"></span>
            <span asp-validation-for="Active"></span>

        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-sm btn-primary">
            <a asp-action="Index" class="btn btn-sm btn-success">Back to homepage</a>
        </div>
    </div>
</form>

