@model ApplicationUser
@{
    ViewData["Title"] = "Detail";
}

<br />
<h2>Customer Detail</h2>
<hr />

<form asp-action="Detail">
    <div class="form-border">
        <fieldset disabled>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="FirstName" class="custom-label"></label>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <input asp-for="FirstName" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="LastName" class="custom-label"></label>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <input asp-for="LastName" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="Email" class="custom-label"></label>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <input asp-for="Email" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="Address" class="custom-label"></label>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <input asp-for="Address" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="City" class="custom-label"></label>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <input asp-for="City" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="PostalCode" class="custom-label"></label>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <input asp-for="PostalCode" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="PhoneNumber" class="custom-label"></label>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <input asp-for="PhoneNumber" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </fieldset>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-sm btn-success">Back to homepage</a>
        </div>
    </div>
</form>
