@model MyProject.Models.MemberList
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Add Member Types</h2>
<hr />

<form asp-action="Create">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <input asp-for="Name" class="form-control">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label asp-for="BirthDate" class="custom-label"></label>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <input asp-for="BirthDate" class="form-control">
                        <span style="speak-date: dmy"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Gender" class="custom-label"></label>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <input asp-for="Gender" class="form-control">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-1">
                    <input asp-for="Active" class="checkbox">
                </div>
                <div class="col-md-3">
                    <label asp-for="Active" class="custom-label"></label>
                </div>
            </div>

            <span asp-validation-for="Name"></span>
            <span asp-validation-for="BirthDate"></span>
            <span asp-validation-for="Active"></span>

        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-sm btn-primary">
            <a asp-action="Index" class="btn btn-sm btn-success">Back to homepage</a>
        </div>
    </div>
</form>

